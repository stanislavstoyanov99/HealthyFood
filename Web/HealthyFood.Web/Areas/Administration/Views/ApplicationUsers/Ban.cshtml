@using HealthyFood.Web.Areas.Administration.Views.ApplicationUsers;
@model HealthyFood.Models.ViewModels.ApplicationUsers.ApplicationUserDetailsViewModel
@{
    this.ViewData["Title"] = "Ban Application User";
    this.ViewData["ActivePage"] = ApplicationUserNavPages.ApplicationUsers;
}

<div class="row">
    <div class="col-md-9">
        <form asp-area="Administration" asp-controller="ApplicationUsers" asp-action="Ban" method="post">
            <h5 class="text-danger">Are you sure you want to ban user <strong>@Model.Username ?</strong></h5>
            <hr />
            <div class="form-group">
                <label asp-for="Username"></label>
                <input asp-for="Username" class="form-control" disabled="" />
            </div>
            <div class="form-group">
                <label asp-for="Gender"></label>
                <input asp-for="Gender" class="form-control" disabled="" />
            </div>
            <div class="form-group">
                <label asp-for="CreatedOn"></label>
                <textarea asp-for="CreatedOn" class="form-control" disabled=""></textarea>
            </div>
            <button type="submit" class="btn btn-danger">Ban user @Model.Username</button>
            <button asp-area="Administration" asp-controller="ApplicationUsers" asp-action="GetAll" class="btn btn-primary">Back to all users</button>
        </form>
    </div>
</div>